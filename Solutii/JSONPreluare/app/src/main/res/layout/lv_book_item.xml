<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent">

    <TextView
        android:id="@+id/tv_carte_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nume_carte"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_carte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/val_nume"
        app:layout_constraintStart_toEndOf="@+id/tv_carte_header"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"/>
    <TextView
        android:id="@+id/tv_autor_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/autor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_carte_header"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tv_autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Val Autor"
        app:layout_constraintStart_toEndOf="@+id/tv_autor_header"
        app:layout_constraintTop_toBottomOf="@+id/tv_carte"
        android:layout_marginTop="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>